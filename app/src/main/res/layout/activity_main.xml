<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="나의 냉장고 LIST"
        android:textColor="#ff3399"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/setting"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="#E91E63"
        android:text="="
        android:textSize="36sp"
        app:backgroundTint="#E91E63"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageButton
        android:id="@+id/shoppingBag"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_baseline_shopping_bag_24"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="267dp" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_baseline_photo_camera_24"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="172dp" />





    <TableLayout
        android:layout_width="280dp"
        android:layout_height="600dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="96dp"
        android:background="#EDB7C9"
        android:stretchColumns="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/checkA_selectTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="선호"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/checkA_nameTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="식품종류"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/checkA_numberTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="수 량"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/checkA_statusTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="상 태"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/ic_baseline_add_24"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="621dp" />




</androidx.constraintlayout.widget.ConstraintLayout>


